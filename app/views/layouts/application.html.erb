<!DOCTYPE html>
<html>
  <head>
    <title>ExampleCsvImport</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav">
      <div class="nav-left">
        <%= link_to user_imports_path, class: 'nav-item' do %>
          <h1 class="brand-name">CSV Importable</h1>
        <% end %>
        <%= link_to user_imports_path, class: "nav-item is-tab #{'is-active' if action_name === 'index'}" do %>
          Imports
        <% end %>
        <%= link_to new_user_import_path, class: "nav-item is-tab #{'is-active' unless action_name === 'index'}" do %>
          New Import
        <% end %>
      </div>
      <div class="nav-center">
      </div>

      <div class="nav-right">
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
